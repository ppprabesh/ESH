// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Float
  images      String[]
  size        String[]
  colors      String[]
  featured    Boolean  @default(false)
  material    String?
  weight      Float?

  // Category-specific attributes
  scents     String[] @default([]) // For candles
  fragrances String[] @default([]) // For soaps
  flavors    String[] @default([]) // For oils
  dimensions String? // For statues

  // Relations
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes
  @@index([slug])
  @@index([categoryId])
  @@index([featured])
}

model Category {
  id          String  @id @default(cuid())
  name        String  @unique
  slug        String  @unique
  description String?
  image       String?

  // Relations
  products Product[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes
  @@index([slug])
}
